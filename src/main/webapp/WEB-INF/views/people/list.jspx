<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<div  xmlns:c="http://java.sun.com/jsp/jstl/core" 
	  xmlns:jsp="http://java.sun.com/JSP/Page" 
	  xmlns:spring="http://www.springframework.org/tags" 
	  xmlns:fmt="http://java.sun.com/jsp/jstl/fmt"
	  version="2.0">	
	  <div id="wrapper">
	  	<div class="container-fluid">
	  		<div>
			    <ol class="breadcrumb">
				  <li class="disabled"><a>Person</a></li>
				  <li class="active"><span> List of Persons</span></li>
			     </ol>
			</div>
		 	<h1>List of Persons
		 		    <a href="/hms/people?form" type="button" class="btn btn-primary pull-right">Create Person Information</a>
		 	</h1>
		 	<hr class="hrdesign"/> 
		    <br/>
		    


			<table class="table table-striped">
				<tr>
					<th>Palmus ID</th>
					<th>First Name</th>
					<th>Middle Name</th>
					<th>Last Name</th>
					<th>Birthday</th>
					<th>Gender</th>
					<th>Person Type</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
				
				<c:forEach var="people" items="${people}">
					<tr>
						<td><c:out value="${people.palmusId}" /></td>
						<td><c:out value="${people.firstName}" /></td>
						<td><c:out value="${people.middleName}" /></td>
						<td><c:out value="${people.lastName}" /></td>
						<td><fmt:formatDate value="${people.birthDate}" pattern="MMMM dd, yyyy" /></td>
						<td><c:out value="${people.gender}" /></td>
						<td><c:out value="${people.personType}" /></td>
						<td class="utilbox"><spring:url
								value="/resources/images/showicon.png" var="show_image_url" /> <a
							href="/hms/people/${people.id}" title="Show"> <img
								class="shadowEffect" src="${show_image_url}" height="20" width="15"/>
						</a></td>
						<td class="utilbox"><spring:url
								value="/resources/images/updateicon.png" var="update_image_url" />
							<a href="/hms/people/${people.id}?form" title="Update"> <img
								class="shadowEffect" src="${update_image_url}" height="20" width="20"/>
						</a></td>
						<td class="utilbox"><spring:url
								value="/resources/images/deleteicon.png" var="delete_image_url" />
							<form action="/hms/people?id=${people.id}" method="DELETE">
								<c:set var="delete_confirm_msg">
									<spring:escapeBody javaScriptEscape="true">
										<spring:message code="entity_delete_confirm" />
									</spring:escapeBody>
								</c:set>
								<input src="${delete_image_url}" title="Delete" class="shadowEffect" height="20" width="20" type="image"
									onclick="return confirm('${delete_confirm_msg}');" />
							</form></td>
					</tr>
				</c:forEach>
			</table>

		</div>
    </div>
</div>
