<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<div xmlns:jsp="http://java.sun.com/JSP/Page" 
	xmlns:spring="http://www.springframework.org/tags" 
	xmlns:c="http://java.sun.com/jsp/jstl/core" 
	xmlns:fmt="http://java.sun.com/jsp/jstl/fmt"
	 version="2.0">
	    <div id="wrapper">
		  	<div class="container-fluid">
		    <header class="row">
			    <div class="col-lg-12">
			    	 <h1>Accommodation Information</h1>
			    </div>
			</header>
			<hr class="hrdesign" />
			<br />
		   Start Date : <fmt:formatDate value="${accommodation.startDate}" pattern="MMMM dd, yyyy" />
		   <br/>
		   End Date : <fmt:formatDate value="${accommodation.endDate}" pattern="MMMM dd, yyyy" />
		   <br/>
		   Customer Name : ${accommodation.person.firstName} ${accommodation.person.middleName} ${accommodation.person.lastName}
		   <br/>
		   Room Number : ${accommodation.room.roomNumber}

			<div class="quicklinks">
			 <span>
            	<spring:url value="/resources/images/delete.png" var="delete_image_url" />
                    	<form action="/hms/accommodations?id=${accommodation.id}" method="DELETE">
               				<c:set var="delete_confirm_msg">
			                  <spring:escapeBody javaScriptEscape="true">
			                    <spring:message code="entity_delete_confirm" />
			                  </spring:escapeBody>
		                	</c:set>
		                	 <input src="${delete_image_url}" title="Delete" type="image" onclick="return confirm('${delete_confirm_msg}');" />
               			</form>
            </span>
             <span>
            	<spring:url value="/resources/images/create.png" var="create_image_url" />
                    <a href="/hms/accommodations?form" title="Create">
              			<img class="image" src="${create_image_url}"/>
            		</a>
            </span>
             <span>
            	<spring:url value="/resources/images/update.png" var="update_image_url" />
                    <a href="/hms/accommodations/${accommodation.id}?form" title="Update">
              			<img class="image" src="${update_image_url}"/>
            		</a>
            </span>
			<span>
				<spring:url value="/resources/images/list.png" var="list_image_url" />
	                <a href="/hms/accommodations" title="List">
	              		<img class="image" src="${list_image_url}"/>
	            	</a>
            </span>
           
           
           
				
			</div>
		   		    
		   	</div>
	    </div>
</div>
